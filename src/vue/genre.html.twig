{% extends "base.html.twig" %}
{% block title %} {{ parent() }} Genres {% endblock %}
{% block style %} <link href="css/form.css" rel="stylesheet"> {% endblock %}
{% block contenu %} 
    
  {% if form.valide is defined %} 
    {% if form.valide == true %}
       <h1 class="h3 mb-3 font-weight-normal">{{ form.message }}</h1>
    {% else %}  
       <h1 class="alert alert-danger" role="alert">{{ form.message }}</h1> 
    {% endif %}         
  {% endif %}  
    
    
    <h1 align="center"> Gestion des Genres</h1>
    <div class="panel panel-default">
        <div class="table-responsive">
            <form  class="form" action="index.php?page=genre" method="post" enctype="application/x-www-form-urlencoded">
            <table  class="table table-hover table-striped">
                <tr><th>Libellé</th><th></th><th></th><th></th></tr>
                {% for g in liste %}
                <tr>
                    <td>{{g.libelle}}</td>
                    <td><div class="btn-group btn-group-lg"><a href="index.php?page=genre-modif&id={{g.id}}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a></div></td>
                    <td><div class="btn-group btn-group-lg"><a href="index.php?page=genre"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a></div></td>
                    <td><input type="checkbox" name="cocher[]" id="cocher[]"value="{{g.id}}"/></td>
                </tr> 
                {% endfor %}
            </table>
                <button class="btn btn-lg btn-primary btn-block" type="submit" name="btSupprimer">Supprimer</button>
                {% set nb = form.nbpages %}
                <nav aria-label="Page navigation">
                    <ul class="pagination">
                        <li>
                            <a href="index.php?page=genre&nopage={{ 0 }}" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                        {% for i in 1..nb %}
                            <li><a href="index.php?page=genre&nopage={{ i-1 }}">{{ i }}</a></li>
                        {% endfor %} 
                        <li>
                            <a href="index.php?page=genre&nopage={{ nb-1 }}" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    </ul>
                </nav>
        </div>
    </div>
            </form>
            
                
                                <hr>
                            
   <form  class="form" action="index.php?page=genre" method="post" enctype="application/x-www-form-urlencoded">
       <h1 align="center">Ajouter un Genre:</h1>
        <label for="libelle" class="sr-only">Libellé:</label>
        <input type="textfield" id="libelle" name="libelle" class="form-control" placeholder="Libellé:" required autofocus>
       <button class="btn btn-lg btn-primary btn-block" type="submit" name="btAjouter">Ajouter</button>
   </form>                         
{% endblock %} 