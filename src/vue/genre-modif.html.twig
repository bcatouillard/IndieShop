{% extends "base.html.twig" %}
{% block title %} {{ parent() }} Genres {% endblock %}
{% block style %} <link href="css/form.css" rel="stylesheet"> {% endblock %}
{% block contenu %} 
    {% if form.genre is defined %} 
        {% if form.genre != null %}
            <form class="form" action="index.php?page=genre-modif" method="post" enctype="application/x-www-form-urlencoded">
                <h1 class="h3 mb-3 font-weight-normal">Modifier un genre</h1>
                <input type="hidden" class="form-control" name="id" value="{{ form.genre.id }}"/>
                <label for="libelle" class="sr-only">Libell√©:</label>
                <input type="textfield" class="form-control" name="libelle" value="{{ form.genre.libelle }}"/>
                <button class="btn btn-lg btn-primary btn-block" type="submit" name="btModifier">Modifier</button>
            </form> 
        {% else %} 
            <h1 class="alert alert-danger" role="alert">{{ form.message }}</h1> 
            <h1 class="h3 mb-3 font-weight-normal"><a href="index.php?page=genre">Retourner sur la liste des genres</a></h1>
        {% endif %} 
    {% endif %}    
    {% if form.conclure is defined %}
        {% if form.conclure == true %}
             <h1 class="h3 mb-3 font-weight-normal">{{ form.message }} </h1>
             <h1 class="h3 mb-3 font-weight-normal"><a href="index.php?page=genre">Retourner sur la liste des genres</a></h1>
        {% else %}    
             <h1 class="alert alert-danger" role="alert">{{ form.message }}</h1> 
             <h1 class="h3 mb-3 font-weight-normal"><a href="index.php?page=genre">Retourner sur la liste des genres</a></h1>
        {% endif %}
    {% endif %} 
    
    
    
{% endblock %}