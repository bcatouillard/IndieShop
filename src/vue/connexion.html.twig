{% extends "base.html.twig" %}
{% block title %} {{ parent() }} Connexion {% endblock %}
{% block style %} <link href="css/form.css" rel="stylesheet"> {% endblock %}
{% block contenu %} 
    <form class="form" action="index.php?page=connexion" method="post" enctype="application/x-www-form-urlencoded">
        <h1 align="center"> Se connecter</h1>
        <label for="email" class="sr-only">Email:</label>
        <input type="email" id="email" name="email" class="form-control" placeholder="Email" required autofocus>
        <label for="mdp" class="sr-only">Mot de passe:</label>
        <input type="password" id="mdp" name="mdp" class="form-control" placeholder="Mot de passe" required>
        <button type="submit" class="btn btn-lg btn-primary btn-block backcolor" name="btConnecter">Connexion</button>
        <a href="index.php?page=inscription">S'inscrire</a> 
    </form>
{% endblock %} 