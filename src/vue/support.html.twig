{% extends "base.html.twig" %}
{% block title %} {{ parent() }} Support {% endblock %}
{% block style %} <link href="css/form.css" rel="stylesheet"> {% endblock %}
{% block contenu %} 
    
    {% if form.valide is defined %}
        {% if form.valide == true %}
            <h1>{{form.message}}</h1> 
        {% else %}
            <h1 align="center">Support</h1> 
            <form action="index.php?page=support" method="post" class="form" enctype="application/x-www-form-urlencoded">
                <h1>En cas de probl√®me, contactez nous !</h1>
                <label for="email" class="sr-only">Email:</label>
                <input type="email" id="email" name="email" class="form-control" placeholder="Email:" required autofocus>
                <label for="sujet" class="sr-only">Sujet:</label>
                <input type="textfield" id="sujet" name="sujet" class="form-control" placeholder="Sujet:" required autofocus>
                <label for="message" class="sr-only">Message:</label>
                <input type="textfield" id="message" name="message" class="form-control" placeholder="Message:" required autofocus>
                <button class="btn btn-lg btn-primary btn-block" type="submit" name="btEnvoyer">Envoyer</button>
            </form>
        {% endif %}
    {% endif %}
{% endblock %} 